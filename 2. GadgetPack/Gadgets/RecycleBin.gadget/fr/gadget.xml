<?xml version="1.0" encoding="utf-8"?>
<gadget>
	<name>Corbeille</name>
	<namespace>WastePaperBasket</namespace>
	<version>1.0.1.6</version>
	<author name="Eiskalter Engel">
		<logo src="dragndrop.png" />
	</author>
	<copyright>© 2007</copyright>

	<description>	
		La corbeille trouve maintenant aussi sa place au sein des gadgets. On peut maintenant supprimer directement le contenu de la corbeille. On peut aussi y déposer directement des éléments pour les supprimer.</description>
	<icons>
		<icon height="48" width="48" src="images/100.png" />
	</icons>
	<hosts>
		<host name="sidebar">
			<base type="HTML" apiVersion="1.0.0" src="wastepaperbasket.html" />
			<permissions>full</permissions>
			<platform minPlatformVersion="1.0"/>
			<defaultImage src="dragndrop.png" />
      <autoscaleDPI>true</autoscaleDPI>
    </host>
	</hosts>
</gadget>